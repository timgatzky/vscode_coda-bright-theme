{
	"name": "Coda Bright",
	"tokenColors":
	[
		{
			"scope": "comment, comment keyword",
			"settings": 
			{
				"foreground": "#197020"
			},
		},
		{
			"scope": "keyword, storage, language.property, markup.tag, style.property.name, keyword.other.namespace, keyword.other.use, keyword.other.use-as, keyword.other.new, keyword.operator.new, support.function.construct",
			"settings": 
			{
				"foreground": "#0045aa"
			}
		},
		{
			"scope": "string, meta.function-call string, string source.sql keyword.other, string source.sql keyword.operator",
			"settings": 
			{
				"foreground": "#dd2400"
			}
		},
		{
			"scope": "keyword.operator, meta.class, meta.namespace, variable.other.property, entity.name.type.module, punctuation.definition.begin, punctuation.definition.end",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"scope": "entity.name.function",
			"settings": 
			{
				"foreground": "#3f6e7d"
			}
		},
		{
			"scope": "support.function",
			"settings": 
			{
				"foreground": "#400080"
			}
		},
		{
			"scope": "variable, variable.parameter, source.php meta.class variable.other punctuation.definition.variable",
			"settings": 
			{
				"foreground": "#8735a5"
			}
		},
		{
			"scope": "constant.numeric, constant.language",
			"settings": 
			{
				"foreground": "#007ab7"
			}
		},
		{
			"scope": "keyword.operator.arithmetic",
			"settings": {
				"foreground": "#006FF8"
			}
		},
		{
			"scope": "punctuation.section.embedded",
			"settings": {
				"foreground": "#878787"
			}
		},
		{
			"scope": "string.regexp keyword.operator",
			"settings": 
			{
				"foreground": "#dd2400"
			}
		},
		// inner strings
		{
			"scope": "string constant.numeric",
			"settings": 
			{
				"foreground": "#dd2400"
			}
		},
		// php
		{
			"scope": "source.php support.function",
			"settings": {
				"foreground": "#400080"
			}
		},
		// phphtml
		{
			"scope": "meta.tag",
			"settings": {
				"foreground": "#0045aa"
			}
		},
		{
			"scope": "meta.attribute",
			"settings": {
				"foreground": "#007ab7"
			}
		},
		{
			"scope": "meta.attribute string",
			"settings": {
				"foreground": "#5d8f00"
			}
		},		
		// javascript
		{
			"scope": "source.js variable, source.js variable.parameter",
			"settings": {
				"foreground": "#000000"
			}
		},
		// php in javascript
		{
			"scope": "source.js source.php variable",
			"settings": {
				"foreground": "#8735a5"
			}
		},
		{
			"scope": "source.js source.php punctuation.terminator, source.js source.php support, source.js source.php punctuation.definition.arguments, source.js source.php punctuation.section",
			"settings": {
				"foreground": "#000000"
			}
		},
		// JSON
		{
			"scope": "source.json string support.type",
			"settings": {
				"foreground": "#000000"
			}
		},
		// css
		{
			"scope": "meta.property-name",
			"settings": {
				"foreground": "#0045aa"
			}
		},
		{
			"scope": "source.css support.constant, source.css keyword.operator.pattern, meta.attribute-selector",
			"settings": {
				"foreground": "#5d8f00"
			}
		},
		{
			"scope": "source.css constant.numeric, source.css keyword.other",
			"settings": {
				"foreground": "#dd2400"
			}
		},
		{
			"scope": "source.css support.constant.media",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"scope": "source.css keyword",
			"settings": {
				"foreground": "#DE7A31"
			}
		},
		// php in class="" tags
		{
			"scope": "meta.attribute string source.php support, meta.attribute string source.php meta.method-call, meta.attribute string punctuation.definition.begin,meta.attribute string punctuation.definition.end, meta.attribute punctuation.terminator, meta.attribute string punctuation.section",
			"settings": {
				"foreground": "#000000"
			}
		},
		{
			"scope": "meta.attribute string source.php string",
			"settings": {
				"foreground": "#dd2400"
			}
		},
		
	]
}